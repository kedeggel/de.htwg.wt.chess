# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map to our chess application
GET     /                           controllers.ChessController.chess
GET		/new    			        controllers.ChessController.newChess
GET     /printBoard                 controllers.ChessController.printBoard
GET     /:command                   controllers.ChessController.command(command:String)
# GET     /websocket                  controllers.ChessController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

